@page "/productlabel"
@layout PrintLayout

@if (LabelPrintModel == null || LabelPrintModel.Count <= 0)
{
    @* <h3 class="w-100 text-center">Please wait...</h3> *@
}
else
{
    <div id="printableArea">
        @foreach (var label in LabelPrintModel)
        {
            <RadzenStack Orientation="Orientation.Horizontal" Gap="5px">
                <div class="label-container">
                    <div class="flex-container">
                        <RadzenRow Gap="5px">
                            <RadzenColumn Size="3" class="div-qr-code" Style="width:100%">
                                <img class="qr-code" src="@label.QrValue" alt="QR Code" id="qrCodeImage" />
                            </RadzenColumn>
                            <RadzenColumn Size="6" class="label-info" Style="width:100%">
                                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Start" Gap="2px">
                                    <div class="info-line">
                                        @* <strong>@label.Title1</strong> *@
                                        <span>@label.Content1</span>
                                    </div>
                                    <div class="info-line">
                                        @* <strong>@label.Title2</strong> *@
                                        <span>@label.Content2</span>
                                    </div>
                                    <div class="info-line">
                                        @* <strong>@label.Title3</strong> *@
                                        <span>@label.Content3</span>
                                    </div>
                                </RadzenStack>
                            </RadzenColumn>
                            <RadzenColumn Size="3" class="label-info" Style="width:100%">
                                <img class="qr-code" src="@label.QrValue2" alt="QR Code" id="qrCodeImage" />
                            </RadzenColumn>
                        </RadzenRow>
                    </div>
                </div>
                <div class="label-container">
                    <div class="flex-container">
                        <RadzenRow Gap="5px">
                            <RadzenColumn Size="3" class="qr-code-start" Style="width:100%">
                                <img class="qr-code" src="@label.QrValue" alt="QR Code" id="qrCodeImage" />
                            </RadzenColumn>
                            <RadzenColumn Size="6" class="label-info" Style="width:100%">
                                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Start" Gap="2px">
                                    <div class="info-line">
                                        @* <strong>@label.Title1</strong> *@
                                        <span>@label.Content1</span>
                                    </div>
                                    <div class="info-line">
                                        @* <strong>@label.Title2</strong> *@
                                        <span>@label.Content2</span>
                                    </div>
                                    <div class="info-line">
                                        @* <strong>@label.Title3</strong> *@
                                        <span>@label.Content3</span>
                                    </div>
                                </RadzenStack>
                            </RadzenColumn>
                            <RadzenColumn Size="3" class="qr-code-end" Style="width:100%">
                                <img class="qr-code" src="@label.QrValue2" alt="QR Code" id="qrCodeImage" />
                            </RadzenColumn>
                        </RadzenRow>
                    </div>
                </div>
            </RadzenStack>

            <div class="pagebreak"></div>
        }
    </div>
}

<script>
    function printLabel() {
        window.print();
    }
</script>